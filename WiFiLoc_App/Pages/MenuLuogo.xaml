<Page x:Class="WiFiLoc_App.MenuLuogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300"
	Title="MenuLuogo" Width="150">

    <Grid Margin="-40,0,0,0">
        <StackPanel Margin="0,35,0,10" HorizontalAlignment="Right" Width="190">
            <Button x:Name="AddLuogo" Content="Aggiungi Luogo"  Height="60" Click="AddLuogo_Click"/>
            <Button x:Name="DelLuogo" Content="Rimuovi Luogo"  Height="60" Click="DelLuogo_Click"/>
            <Button x:Name="ModLuogo" Content="Modifica Luogo"  Height="60" Click="ModLuogo_Click"/>
        </StackPanel>
    </Grid>
</Page>
