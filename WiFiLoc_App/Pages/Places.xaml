    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <Label Content="Places" HorizontalAlignment="Left" Margin="66,55,0,0" VerticalAlignment="Top" Height="53" Width="146" FontSize="40"/>
        <ListBox x:Name="placesList" HorizontalAlignment="Left" Height="191" Margin="66,150,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="417" BorderThickness="1" />
